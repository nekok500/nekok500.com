---
import Header from '../components/Header.astro'

const { pageTitle, heading, description } = Astro.props
const fullTitle = 'nekok500.com' + (pageTitle ? ` - ${pageTitle}` : '')
const desc = description || heading
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={fullTitle} />
    {desc && <meta property="og:description" content={desc} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <title>{fullTitle}</title>
  </head>

  <body>
    <div
      class="min-h-screen space-y-8 bg-slate-200 p-8 py-10 md:px-32 lg:px-48"
    >
      <Header />
      <slot class="container" />
    </div>
  </body>
</html>
